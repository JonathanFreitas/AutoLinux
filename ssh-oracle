echo -e "\nssh-rsa  oracleredeok" >> .ssh/authorized_keys
service sshd restart
sudo adduser tiago
sudo echo "" | passwd "tiago" --stdin
sudo usermod -aG wheel tiago
sudo echo "tiago ALL=(ALL)       NOPASSWD:ALL" >> /etc/sudoers

#########  UBUNTU  #########################################

echo -e "\nssh-rsa  oracleredeok" >> .ssh/authorized_keys
service sshd restart
adduser tiago
usermod -aG sudo tiago
sudo echo "tiago ALL=(ALL)       NOPASSWD:ALL" >> /etc/sudoers
